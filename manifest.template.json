{
  "manifest_version": 3,
  "name": "Backlog AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for Backlog ticket analysis and chat",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.backlog.com/*",
    "*://*.backlog.jp/*",
    "*://*.backlogtool.com/*",
    "https://www.google-analytics.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.backlog.com/view/*",
        "*://*.backlog.jp/view/*",
        "*://*.backlogtool.com/view/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content-styles.css",
        "sidebar-styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Backlog AI Assistant - Open Settings"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/icon16{{ICON_SUFFIX}}.png",
    "48": "icons/icon48{{ICON_SUFFIX}}.png",
    "128": "icons/icon128{{ICON_SUFFIX}}.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chatbot.js",
        "chatbot-aside-panel.js",
        "vendors.js",
        "chatbot-styles.css",
        "sidebar-styles.css",
        "icons/icon.svg"
      ],
      "matches": [
        "*://*.backlog.com/*",
        "*://*.backlog.jp/*",
        "*://*.backlogtool.com/*"
      ]
    }
  ]
}
